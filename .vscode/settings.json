{
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./test",
        "-p",
        "test*.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
    "activestate.promptRuntimeCreation": false,

    "runItOn": {
        "commands": [
            {
                "match": "\\.py$",
                "isAsync": true,
                "isShellCommand": false,
                "cmd": "testing.runAll"
            },
        ],
    },
}